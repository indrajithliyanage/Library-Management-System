@model LibraryManagementSystem.Models.ContactModel

@{
    ViewBag.Title = "Contact";
}

<div class="d-flex justify-content-lg-center ">
    <div class="jumbotron col-lg-10">
        <div id="message" class="alert alert-success text-lg-center font-weight-bolder" role="alert" style="display:none;"></div>
        <div class="card-header text-center">
            <h4>Contact Us</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group floating-addon">
                    <label>Name</label>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="far fa-user"></i>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="text-md-center">
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-addon">
                        <label>Email</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="text-md-center">
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label>Message</label>
                        @Html.EditorFor(model => model.message, new { htmlAttributes = new { @class = "form-control", @rows = 15 } })
                    </div>
                    <div class="text-md-center">
                        @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-round btn-lg btn-primary">
                            Send Message
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    var message = '@TempData["msg"]';
    if (message != null && message != '') {
        $("#message").text(message).fadeIn();
    };
    setTimeout(function () { $("#message").fadeOut() }, 3000);
</script>